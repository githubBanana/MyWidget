<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.xs.mywidget.MainActivity">

    <FrameLayout
        android:layout_width="201dp"
        android:layout_height="201dp"
        android:background="@android:color/black">
        <com.xs.widgetlib.progressview.RoundProgressView
            android:id="@+id/rpv_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:roundWidth="10dp"
            app:round_color="@android:color/darker_gray"
            app:arc_color="@android:color/holo_green_dark"
            app:text_color="@android:color/holo_green_dark"
            app:text_size="25dp"/>

    </FrameLayout>

    <Button
        android:id="@+id/btn_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="begin"/>
    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop"/>

</LinearLayout>
